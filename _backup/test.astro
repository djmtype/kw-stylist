---
import Layout from "../layouts/Layout.astro"
import Logo from "../components/Logo.astro"
---

<Layout title='Katina Wilson â€¢ Hair Sylist'>
	<main>
		<div class="hero">
			<p class="label-1">Since</p>
			<img src="/butterfly.png" width="1020" height="670" alt="" />
			<p class="label-2">2023</p>
		</div>

		<h1>
			<Logo />
			<span class="sr-only">Katina Wilson</span>
		</h1>

	</main>
</Layout>

<style>
:root {
	--logo: currentColor;
}

.hero {
	background-color: gray;
	display: grid;
	grid-template-columns: auto 1fr auto;
	grid-template-rows: 1fr auto 1fr;
	/* height: 50vh; */
	overflow: hidden;
}


.hero img {
	position: relative;
	z-index: 0;
width: 100%;
height: 100%;
display: block;
object-fit: contain;
}



[class*="label-"] {
	font-size: calc(1rem + 1.5cqi);
	position: relative;
	z-index: 2;
	transform: translateY(1em)
}

.label-1 {
	grid-column: 1;
	grid-row: 2;
	align-self: end;
}

.label-2 {
	grid-column: 3;
	grid-row: 2;
}



.hero img {
	grid-row: 1/-1;
	grid-column: 1/-1;

	/* object-fit: contain; */
}

	main {
		container: main / inline-size;
		border: 1px solid black;
		display: grid;
		place-content: center;
		height: 100vh;
		width: 100%;
		max-width: 800px;
		margin-inline: auto;
	}


h1 {
  font-size: calc(1rem + 3cqi);
}



</style>
